mixin mainNavLink(title)
  li.main-nav__item
    a(href="javascript:void(0);").main-nav__link= title

nav.main-nav
  ul.main-nav__list
    +mainNavLink('Мебель')
    +mainNavLink('Бытовая техника')
    +mainNavLink('Храниение вина')
    +mainNavLink('Посуда')
    +mainNavLink('Ножи')
    +mainNavLink('Бар и хрусталь')
    +mainNavLink('Сервировка')
    +mainNavLink('Кухонная утварь')
    +mainNavLink('Текстиль')
  .header-search.search
    +icon('search')
