mixin catalogViewItem(img, title, key, val, price, availability)
  .catalog-view__item
    .catalog-view__img
      img(src=`static/img/content/products/catalog/${img}`)
      span.g-btn.g-btn--border-black Быстрый просмотр
    .product-prev__content
      a.product-prev__title(href="javascript:void(0);")= title
      .product-lines-info
        .product-line-info
          span.product-info-line__key= key
          span.product-info-line__val= val
      ul.product-specification-list
        +productSpecificationIcon('equal')
        +productSpecificationIcon('favourite')
        +productSpecificationIcon('basket')
        +productSpecificationIcon('register')
        +productSpecificationIcon('pan')
        +productSpecificationIcon('resize')
        +productSpecificationIcon('login')
        +productSpecificationIcon('check')
      .product-prev__link
        a(href="product.html") Подробнее о товаре
      .product-prev__line-price
        span.product-price!= `${price} &#8381;`
        if(availability === 'Есть в наличии')
          .product-availability
            +icon('check')
            span Есть в наличии
        else
          .product-availability
            +icon('down')
            span Под заказ
      .product-btn
        a.g-btn.g-btn--border-black.g-btn--no-underline.g-btn-buy(href="javascript:void(0);") В корзину
        a.g-btn.g-btn--border-black.g-btn--no-underline(href="javascript:void(0);") Купить в 1 клик

section.catalog-result
  .container
    include catalog-sort
    .catalog-view
      include ../../product/product1.pug
      include ../../product/product1.pug
      include ../../product/product1.pug
      include ../../product/product1.pug
      include ../../product/product1.pug
      include ../../product/product1.pug

    .catalog-nav
      a.g-btn.g-btn--black.g-btn--no-underline(href="javascript:void(0);") Показать еще
      ul.catalog-pag
        li.catalog-pag__item
          a.catalog-pag__link.catalog-pag__link--arrows.catalog-pag__link--first
            +icon('double-left')
        li.catalog-pag__item
          a.catalog-pag__link.catalog-pag__link--arrows.catalog-pag__link--prev
            +icon('left')
        li.catalog-pag__item
          a.catalog-pag__link.active
            span 1
        li.catalog-pag__item
          a.catalog-pag__link
            span 2
        li.catalog-pag__item
          a.catalog-pag__link
            span 3
        li.catalog-pag__item
          a.catalog-pag__link
            span 4
        li.catalog-pag__item
          a.catalog-pag__link.catalog-pag__link--arrows.catalog-pag__link--first
            +icon('right')
        li.catalog-pag__item
          a.catalog-pag__link.catalog-pag__link--arrows.catalog-pag__link--prev
            +icon('double-right')