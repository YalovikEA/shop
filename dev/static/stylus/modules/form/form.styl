.g-input
  size(100%,50px)
  line-height @height
  padding 0 15px
  background-color transparent
  border 1 px solid #fff
  color blackColor

  &.g-input--white
    color #fff

  &:focus
    box-shadow 2px 2px 10px #fff

.g-label
  color blackColor

  &.g-label--white
    color #fff
  &.g-label--gold
    color goldColor

.g-form-block--search
  position relative

  .icon
    absolute($top:50%,$left:10px)
    size(25px)
    transform translateY(-50%)

.g-select
  padding 5px
  border 0
  text-decoration underline
  background-color transparent

