.filter
  position relative
  padding 30px
  background-color #f5f5f5
  margin-bottom 30px

.filter-hide-more
  absolute($bottom:-10px,$left:50%)
  transform translateX(-50%)
  size(20px)
  border-radius 50%
  background-color #fff
  box-shadow 1px 1px 5px #000
  cursor pointer

  .icon
    absolute-center()
    size(12px, 9px)
    transition all linear .5s

  &.active
    .icon
      transform translate(-50%,-50%) rotate(180deg)

.filter-count-res
  absolute($top:-20px,$left:50%)
  padding 0 20px
  height 40px
  line-height @height
  transform translateX(-50%)
  background-color #f5f5f5

.count-res__number
  font-family boldFont
  margin-left 5px

.filter-line
  display flex
  justify-content space-between
  margin-bottom 25px

.filter-top__item
  width 35%
  flex-shrink 0

  &.filter-top__item--color
    width 25%

.filter-item__title
  display inline-block
  font-family boldFont
  margin-bottom 10px

.filter-item__title--small
  font-family mainFont
  font-size rem(13)
  margin-left 5px
  margin-bottom 0

.filter-range__list
  display flex
  justify-content space-between
  margin-bottom 15px
  text-transform lowercase

.filter-range__link
  border-bottom 1px dotted grayColor
  font-size rem(15)

.range-slider
  margin-bottom 20px

.filter-range__text
  display flex
  align-items center

.filter-range__val
  display flex
  justify-content space-between
  flex-shrink 0
  align-items center
  margin-right 10px
  width 130px

  span
    margin-right 10px

.filter-input
  padding 0 5px
  width 100%
  background-color #fff
  border 1px solid filterColor



.filter-color__list
  display flex
  margin-bottom 20px

.filter-color__item
  margin-right 10px

  &:last-child
    margin-right 0

.filter-color__check
  position relative

  input[type="checkbox"]
    display none

    &:checked

      &~.filter-color
        border 2px solid blackColor

        .filter-color__icon
          opacity 1

.filter-color
  position relative
  size(25px)
  border 1px solid filterColor
  transition all linear .2s

.filter-color__icon
  absolute($right:0,$bottom:0)
  size(12px)
  background-color #fff
  opacity 0
  transition all linear .2s

  .icon
    absolute-center()
    size(9px)

.checkbox
  position relative
  display block
  width 100%
  line-height 1
  padding-left 25px

  &.checkbox--bold
    font-family boldFont

  input[type="checkbox"]
    display none

    &:checked

      &~.checkbox-custom
        .icon
          display block

.checkbox-custom
  absolute($left:0,$top:0)
  size(15px)
  background-color #fff
  border 1px solid filterColor

  .icon
    size(9px)
    absolute-center()
    display none


.filter-checkbox__list
  display flex
  justify-content space-between
  flex-wrap wrap

.filter-checkbox__item
  width 30%
  flex-shrink 0
  margin-bottom 10px

.filter-bottom__item
  width 23.75%
  flex-shrink 0

  .filter-checkbox__item
    width 100%

  .filter-range__list
    justify-content flex-start

  .filter-range__link
    margin-right 15px

  .filter-range__val
    width 80px

.filter-bottom__item--count
  .filter-checkbox__list
    justify-content flex-start
  .filter-checkbox__item
    width 20%

.filter-tab
  text-align center
  position relative

  &::after
    absolute-center()
    content ""
    width 100%
    height 1px
    background-color lighten(grayColor, 70%)

.filter-tab__link
  position relative
  z-index 2
  padding 0 15px
  display inline-block
  background-color #fff
  text-decoration underline