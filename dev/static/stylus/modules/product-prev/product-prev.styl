.product-prev
  margin-right 10px

.product-prev__img
  width 100%
  height 250px
  display block
  margin 0 auto 20px

.product-prev__content
  position relative
  padding-top 60px
  margin-bottom 20px

.product-prev__title
  display block
  absolute($top:0)
  text-decoration underline
  line-height 1.3

.product-prev__line-price,
.product-actions
  display flex

.product-prev__line-price
  margin-bottom 15px
