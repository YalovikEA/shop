.accordion-item
  margin-bottom 25px

  &:last-child
    margin-bottom 0

  &.active

    .accordion__title
      margin-bottom 15px

      &::after
        transform rotate(180deg)



.accordion__title
  position relative
  display inline-block
  border-bottom 1px dotted lighten(grayColor, 70%)
  cursor pointer

  &::after
    content ""
    absolute($top:50%,$right:-20px)
    margin-top -2.5px
    size(0)
    border-style solid
    border-width 0 5px 5px 5px
    border-color transparent transparent #000

.accordion__content
  display none
  padding 30px
  background-color lighten(grayColor, 70%)

.accordion__text
  line-height 1.3
  margin-bottom 15px

  &:last-child
    margin-bottom 0