.unknown
  padding 0
  >.container

    &::before
      z-index 0
      content ''
      absolute($top:-30px,$right:0,$bottom:0,$left:0)
      background url('../img/general/404/404-bg.png') right 0 no-repeat
      background-size contain

.unknown-content
  padding 60px 0
  position relative
  padding-right 50%
  z-index 1

  .g-block-title
    &::after
      content ""
      display block
      size(20px,2px)
      margin 25px 0
      background-color #000

.unknown-text
  margin-bottom 25px
  line-height 1.3

  &:last-child
    margin-bottom 0

.unknown-text__link
  text-decoration underline

.unknown-list
  position relative
  display flex
  justify-content space-between
  flex-wrap wrap
  padding-bottom 10px
  margin-bottom 25px

  &::after
    content ""
    absolute($bottom:0,$left:0)
    size(20px,2px)
    background-color #000

.unknown-list__item
  flex 1 0 48%
  margin-bottom 15px

.unknown-list__link
  text-transform uppercase
  text-decoration underline

.unknown-form
  position relative
  display flex
  justify-content space-between
  margin-bottom 25px
  padding-bottom 25px

  &::after
    content ""
    absolute($bottom:0,$left:0)
    size(20px,2px)
    background-color #000

.unknown-form__input
  width 73%
  background-color #fff

.unknown-form__submit
  width 24%