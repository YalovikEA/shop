.catalog-result
  padding-top 0

.catalog-view
  display flex
  justify-content flex-start
  flex-wrap wrap

.catalog-view__item
  width 24%
  flex-shrink 0
  margin-bottom 40px
  margin-right 1.3333%
  box-shadow 1px 1px 5px rgba(#000,.1)

  &:nth-child(4n)
    margin-right 0

.catalog-view__img
  position relative
  margin-bottom 15px
  width 100%
  height 260px

  img
    display block
    max-width 100%
    height 100%
    margin 0 auto

  .g-btn
    opacity 0
    background-color rgba(#fff,0.4)
    absolute($right:0,$bottom:0,$left:0)

  &:hover
    .g-btn
      opacity 1

.catalog-nav
  position relative
  text-align center

.catalog-pag
  absolute($top:50%,$right:0)
  transform translateY(-50%)
  display flex

.catalog-pag__item
  size(34px)
  margin-left 2px

  &:first-child
    margin-left 0

.catalog-pag__link
  position relative
  display block
  size(100%)
  cursor pointer
  border 2px solid transparent
  background-color lighten(grayColor, 90%)

  &.active
    border-color blackColor

  span
    absolute-center()

.catalog-pag__link--arrows
  background-color blackColor

  .icon
    fill #fff
    size(15px)
    absolute-center()