.sort
  display flex
  justify-content space-between
  margin-bottom 40px

.sort-common,
.sort-view__count
  display flex
  align-items center

.sort-view__item
  position relative
  size(28px)
  margin-left 5px
  background-color darken(#f5f5f5, 20%)
  cursor pointer
  border 2px solid transparent

  &:first-child
    margin-left 20px

  &.active
    border-color blackColor

  .icon
    absolute-center()
    fill grayColor
    size(16px)

.sort-view__list
  display flex

.sort__title
  font-family boldFont

.sort-variants__link
  position relative
  height 30px
  line-height @height
  padding 0 30px 0 10px
  margin 0 5px
  font-size rem(15)
  cursor pointer

  &::after
    absolute($top:14px,$right:10px)
    content ""
    size(0)
    border-style solid
    border-width 5px 5px 0 5px
    border-color blackColor transparent transparent transparent

  &.active
    background-color darken(#f5f5f5, 20%)

  span
    border-bottom 1px dotted grayColor