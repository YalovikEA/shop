.pic-menu
  margin-top -80px
  padding 0

.pic-menu__item
  position relative
  size(100%,280px)
  background-size cover
  background-position center
  margin-bottom 10px

  &.pic-menu__item--big
    height auto
    width 49.5%


.pic-menu__nav
  absolute($right:0,$bottom:0,$left:0)
  height 105px
  padding 15px 20px
  background-color rgba(#000,.8)

.pic-menu__title
  text-transform uppercase
  color #fff
  border-bottom 1px solid grayColor
  display inline-block
  margin-bottom 5px

.pic-menu-list
  display flex
  flex-wrap wrap

.pic-menu-list__item
  margin-right 10px
  margin-bottom 5px

  &:last-child
    margin-bottom 0

    a
      color goldColor
      border-bottom-color goldColor

.pic-menu-list__link
  color #fff
  border-bottom 1px solid grayColor