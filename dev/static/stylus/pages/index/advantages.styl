.advantages
  background url('../img/general/advantages/advantages.jpg') center
  background-size cover

  .cont-line
    margin-bottom 10px

  &::before
    content ""
    absolute-all(0)
    display block
    background-color rgba(#fff,.85)

.advantages-item
  background-color #fff
  padding 25px
  size(100%)

  .icon
    size(25px)
    margin-bottom 15px

.advantages-item--best-brends
  background #eee url('../img/general/advantages/advantages-best-brends.jpg') 95% 50% no-repeat
  background-size 45%
  padding-right 48%

.advantages-real-item
  background #eee url('../img/general/advantages/advantages-real-item.jpg') 95% 50% no-repeat
  background-size 45%
  padding-right 48%

.advantages-item__title
  font-family boldFont
  line-height 1.3
  display block
  text-transform uppercase

  &::after
    content ""
    display block
    size(20px,2px)
    margin 20px 0 15px
    background-color #000

.advantages-item__text
  line-height 1.3