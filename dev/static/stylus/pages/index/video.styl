.video-review__content
  margin-bottom 45px
  display flex
  justify-content space-between

.video-review__item
  size(49.5%, 350px)
  position relative
  background-color #e2e2e2

.video-review__img
  width 100%
  height 100%

.video-review__play
  absolute($top:50%,$left:50%)
  transform: translate(-50%, -50%);
  size(70px)
  background rgba(#000,.45)
  border-radius 50%
  cursor pointer

  &:hover
    background rgba(#000,.8)

    .icon
      size(35px)

  .icon
    absolute($top:50%,$left:50%)
    transform: translate(-50%, -50%);
    size(30px)
    fill #fff

.video-review__info
  absolute($right:0,$bottom:0,$left:0)
  height 70px
  padding 18px 20px
  background-color rgba(#000,.8)

.video-review__date
  display block
  // margin-bottom 5px
  font-size rem(15)
  color goldColor

.video-review__link
  border-bottom 1px solid grayColor
  color #fff