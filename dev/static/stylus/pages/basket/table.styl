.basket-table
  border-collapse collapse
  margin-bottom 20px

  td,
  th
    padding 10px
    text-align left
    border-bottom 1px solid lighten(grayColor, 85%)

  th
    color goldColor
    font-size rem(15)

  td
    height 120px

  .basket-table__product
    position relative
    padding-left 120px

  .basket-table__img
    absolute($top:50%,$left:10px)
    transform translateY(-50%)
    max-height 80px
    max-width 80px
    width 100%

  .basket-table__link
    basket-table__product
    line-height 1.3
    text-decoration underline

.basket-table__price
  white-space nowrap

.basket-count
  display flex

.basket-count__minus,
.basket-count__plus
  position relative
  flex-shrink 0
  size(32px)

  span
    font-size rem(18)
    font-family boldFont
    absolute-center()
    cursor pointer

.basket-count__minus
  border 2px solid blackColor

.basket-count__plus
  background-color blackColor
  color #fff

.basket-count__current

  .g-input
    max-width 45px
    margin 0 10px
    height 32px
    line-height @height

.basket-table__total
  white-space nowrap
  font-family boldFont

.basket-table__remove
  span
    size(18px)
    position relative
    display inline-block
    border 2px solid blackColor
    border-radius 50%
    vertical-align middle
    cursor pointer


    &::after,
    &::before
      absolute($top:7px,$left:2px)
      content ""
      width 10px
      height 1px
      background-color #000

    &::after
      transform rotate(45deg)
    &::before
      transform rotate(-45deg)

