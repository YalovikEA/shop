.you-see
  padding-bottom 0

  .container
    padding-bottom 60px
    border-bottom 1px solid lighten(grayColor, 70%)

.you-see__content
  display flex
  justify-content space-between

.you-see__item
  width 22%

.you-see__img
  height 125px
  width 70%
  display block
  margin 0 auto 10px
  border-radius 35px 0 35px 0
  box-shadow 5px 5px 15px rgba(#000,.7)

.you-see__link
  text-decoration underline
  line-height 1.3