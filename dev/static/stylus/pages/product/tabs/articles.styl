.product-articles__item
  display flex
  justify-content space-between
  margin-bottom 25px

  .g-block-title
    text-decoration underline

.product-articles__img,
.product-articles__content
  width 49%

.product-articles__img
  background-size cover

.product-articles__content
  padding 50px 0

.product-articles__date
  font-size rem(15px)
  color goldColor
  margin-bottom 10px

  .icon
    size(16px)
    margin-right 10px

.product-articles__text
  margin-bottom 10px
  line-height 1.3

.product-articles__link
  border-bottom 1px solid lighten(grayColor, 70%)