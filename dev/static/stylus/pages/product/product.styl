.product-content
  display flex
  justify-content space-between

.product-gallery,
.product-info
  width 48%
  flex-shrink 0

.product-fast-info
  display flex
  justify-content space-between
  margin-bottom 25px

.product-specification
  width 60%

.product-specification-list
  display flex

.product-specification-list__item
  margin-right 5px

  &:last-child
    margin-right 0

  .icon
    size(18px)

.product-callback
  position relative
  padding-left 30px
  width 35%

  .icon
    absolute($top:0,$left:0)
    size(20px)

.product-callback__phone
  display block
  margin-bottom 10px

.product-callback__link
  display inline-block
  margin-bottom 10px
  border-bottom 1px dotted grayColor

span.product-callback__text
  font-size rem(15)
  line-height 1.3

.product-line-info
  margin-bottom 10px
  font-size rem(15)

  &:last-child
    margin-bottom 20px

.product-info-line__key
  color goldColor
  margin-right 5px


.product-price-info
  display flex
  justify-content space-between
  align-items flex-end
  margin-bottom 25px

  .product-price
    font-family boldFont
    font-size rem(32px)
    line-height 1

.product-price
  font-family boldFont
  margin-right 20px

.product-availability
  .icon
    size(17px)
    margin-right 10px

.product-feedback
  width 35%
  .icon
    size(17px)
    margin-right 10px

.product-buttons
  display flex
  justify-content space-between
  align-items center
  margin-bottom 25px

  .g-btn
    width 48%
    text-align center


.product-actions
  display flex
  align-items center
  padding-bottom 30px
  margin-bottom 30px
  border-bottom 1px solid lighten(grayColor, 50%)

.product-action
  margin-right 20px

  &:last-cild
    margin-right 0

  .icon
    size(17px)
    margin-right 10px

  a
    border-bottom 1px dotted grayColor

.product-btn
  .g-btn
    width 100%
    text-align center

.product-line
  display flex
  justify-content space-between

.product-delivery,
.product-guarantee
  width 48%

.product-title-icon
  margin-bottom 15px
  text-transform uppercase
  font-family boldFont

  .icon
    size(30px)
    margin-right 10px

.product-delivery__info
  padding 15px
  margin-bottom 20px
  background-color lighten(grayColor, 70%)

  span
    display block

    &:first-child
      margin-bottom 15px

.product-delivery-variants__item
  position relative
  padding-left 10px

  &::before
    content ""
    display block
    absolute($top:9px,$left:0)
    size(5px)
    background-color blackColor

.product-delivery-variants__key
  font-family boldFont
  display block

.product-delivery-variants__var
  color goldColor
  display block

.product-gallery-main
  position relative
  margin-bottom 10px

.product-gallery__item
  height 450px

  img
    width 100%
    height 100%

.product-gallery__controls
  absolute($top:50%)
  transform translateY(-50%)
  size(45px)
  background-color lighten(grayColor, 50%)
  z-index 1
  cursor pointer

  .icon
    size(20px)
    absolute-center()

.product-gallery__controls--prev
  left 0

.product-gallery__controls--next
  right 0



.product-gallery-nav
  height 100px

.product-gallery-nav__item
  width 100px
  height 100px
  cursor pointer
  border 1px solid lighten(grayColor, 50%)
  margin 0 5px

  &:hover
    border-color blackColor

  img
    width 100%
    height 100%

.video-img
  width 100%
  height 100%