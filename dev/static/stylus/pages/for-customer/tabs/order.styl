.page-banner--order
  background-image url('../img/general/page-banner/order-bg.jpg')

.page-banner__content--order
  padding-right 30%

  &::before
    content ''
    absolute($top:-30px,$right:0,$bottom:0,$left:0)
    background url('../img/general/page-banner/order-bg.png') right 0 no-repeat
    background-size contain

.how-order__block
  margin-bottom 30px

  .g-block-title,
  &.how-order__block--phone
    text-align center

.for-customer-text__link
  font-family boldFont

.how-order__form
  max-width 800px
  margin 0 auto
  display flex
  justify-content space-between
  align-items flex-end

.g-form-block
  width 32%
  flex-shrink 0

  .g-btn
    width 100%