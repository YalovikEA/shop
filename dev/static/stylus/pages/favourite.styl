.favourite__content
  display flex
  justify-content space-between
  flex-wrap wrap
  margin-bottom -35px

  .product-prev
    width 24%
    margin-bottom 35px

    &:nth-child(4n)
      margin-right 0

  .product-actions
    flex-direction column
    align-items flex-start

  .product-action
    margin 0
    margin-bottom 10px

    &:last-child
      margin-bottom 0
